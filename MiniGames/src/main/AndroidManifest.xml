<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.es.minigames">

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">

        <meta-data
                android:name="com.google.android.gms.version"
                android:value="@integer/google_play_services_version" />

        <meta-data
                android:name="com.google.android.gms.games.APP_ID"
                android:value="@string/app_id" />

        <activity
                android:name=".MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".scrollingbackgrounds.ScrollingBackgroundActivity"
                android:label="@string/title_activity_platform" />

        <activity
                android:name=".platform.PlatformActivity"
                android:label="@string/title_activity_platform" />

        <activity
                android:name=".towerdefense.TowerDefenseActivity"
                android:label="@string/title_activity_td"
                android:screenOrientation="userLandscape" />
    </application>

</manifest>
